{
  "manifest_version": 2,
  "name": "Length Estimator",
  "description": "Extension to estimate how long is a Youtube Playlist",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "background",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
